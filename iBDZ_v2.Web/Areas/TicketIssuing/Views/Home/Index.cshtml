@*
    Ticket issuer home page.
    It displays a giant map and a search bar on the right to help ticket issuers find the station they're working at.
    After a station has been selected, the app redirects to the main ticket issuing page for that station.
*@

@{
    ViewData["Title"] = "Select station";
}

@model MapRenderData

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    canvas {
        background-color: #242424;
        margin: 0px;
        padding: 0px;
        border-width: 0px;
        width: 85%;
        height: 100%;
    }
</style>

<canvas id="map" width="500" height="500"></canvas>
<img style="display: none;" id="bg-map" src="~/images/bulgaria_background.svg" />

<script>
    var mapRenderData = @Html.Raw(Json.Serialize(Model));
</script>
<script src="~/js/MapRender.js"></script>