<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - iBDZ Ticket issuing</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>


<body>
    <style>
        .MyHeader {
            display: grid;
            grid-template-rows: auto;
            grid-template-columns: auto 5%;
            grid-template-areas: "title search";
            padding-top: 10px;
            padding-bottom: 10px;
            background: linear-gradient(to bottom, yellow, #c651c3);
        }

        #title {
            grid-area: title;
            font-size: 23pt;
            text-align: center;
        }

        #search {
            grid-area: search;
            margin-right: 5px;
            font-size: 23pt;
            text-align: center;
            background: linear-gradient(to bottom, #ffffff, #eeeeee);
            border-radius: 15px;
            box-shadow: 0px 5px rgba(120, 120, 120, 0.80);
        }

            #search:hover {
                cursor: pointer;
            }

            #search:active {
                background: linear-gradient(to top, #eaeaea, #dddddd);
                box-shadow: 0px -5px rgba(120, 120, 120, 0.80);
            }

                #search:active span {
                    text-shadow: 1px 0px black, -1px 0px black, 0 1px black, 0 -1px black;
                    color: white;
                }

        .MyUnselectable {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

    </style>
    <div class="MyHeader">
        <div id="title"> @ViewData["Title"] </div>
        <div id="search"> <span class="MyUnselectable">???</span> </div>
    </div>

    @RenderBody()
</body>

</html>
